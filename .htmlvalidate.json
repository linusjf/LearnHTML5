{
  "elements": [
    "html5"
  ],
  "extends": [
    "html-validate:recommended"
  ],
  "rules": {
    "attr-pattern": "warn",
    "attr-spacing": "error",
    "attribute-allowed-values": "warn",
    "attribute-boolean-style": [
      "warn",
      {
        "style": "name"
      }
    ],
    "attribute-empty-style": [
      "warn",
      {
        "style": "empty"
      }
    ],
    "class-pattern": [
      "warn",
      {
        "pattern": "kebabcase"
      }
    ],
    "doctype-html": "error",
    "doctype-style": [
      "warn",
      {
        "style": "lowercase"
      }
    ],
    "element-permitted-content": "warn",
    "form-dup-name": [
      "error",
      {
        "allowArrayBrackets": true,
        "shared": [
          "radio",
          "submit",
          "button",
          "reset",
          "checkbox"
        ]
      }
    ],
    "input-missing-label": "error",
    "meta-refresh": "off",
    "no-autoplay": "off",
    "no-conditional-comment": "off",
    "no-deprecated-attr": "off",
    "no-inline-style": "off",
    "no-redundant-for": "off",
    "no-redundant-role": "off",
    "no-style-tag": "off",
    "no-trailing-whitespace": "off",
    "prefer-button": "warn",
    "prefer-tbody": "off",
    "tel-non-breaking": "off",
    "unrecognized-char-ref": "off",
    "void-style": "off"
  }
}
