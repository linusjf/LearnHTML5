#!/usr/bin/env bash
declare -i SUCCESS=0
declare -i CSS_SUCCESS=0
declare -r configFileName="tidy.config"
configFilePath="$(find . -maxdepth 2 \
  -type f -name "$configFileName" ! -path \
  "**/.git/**" | head -n 1)"
files=$(find . -type f -name "*.css" \
  ! -path "**/.git/**")
echo "$files" |
  parallel -j 5 -I% \
    csslint --quiet --format=compact %
CSS_SUCCESS=$?
if [[ $CSS_SUCCESS == 0 ]]; then
  echo "$files" |
    parallel -j 5 -I% \
      prettier --parser css --write %
  CSS_SUCCESS=$CSS_SUCCESS+$?
fi
files=$(find . -maxdepth 2 -type f -name "*.html" \
  ! -path "**/.git/**")
echo "$files" |
  parallel -j 5 -I% \
    htmlhint -f compact %
SUCCESS=$?
if [[ $SUCCESS == 0 ]]; then
  echo "$files" |
    parallel -j 5 -I% \
      tidy -config "$configFilePath" -quiet -xml -m %
  SUCCESS=$SUCCESS+$?
fi
exit "$((SUCCESS + CSS_SUCCESS))"
