{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "plugins": [
    "stylelint-csstree-validator",
    "stylelint-rem-over-px"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "comment-no-empty": null,
    "csstree/validator": {
      "atrules": false,
      "ignoreProperties": [
        "[$][A-Za-z_0-9-]+",
        "parent-selector{1}"
      ],
      "ignoreValue": "(.*[$].*)|(math.*)|([&])",
      "properties": {
        "font-size": "| min(<length-percentage>, <length-percentage>) | max(<length-percentage>, <length-percentage>)",
        "text-wrap": "wrap | nowrap | balance | pretty | stable | inherit | initial | revert | revert-layer | unset",
        "width": "| min(<length-percentage>, <length-percentage>) | max(<length-percentage>, <length-percentage>)"
      },
      "syntaxExtensions": [
        "sass",
        "less"
      ]
    },
    "font-family-no-missing-generic-family-keyword": [
      true,
      {
        "ignoreFontFamilies": [
          "IconFont"
        ]
      }
    ],
    "media-feature-range-notation": "prefix",
    "no-duplicate-selectors": [
      true,
      {
        "disallowInList": false
      }
    ],
    "number-max-precision": 6,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "parent-selector"
        ]
      }
    ],
    "rem-over-px/rem-over-px": true,
    "scss/at-each-key-value-single-line": true,
    "scss/at-extend-no-missing-placeholder": true,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind"
        ]
      }
    ],
    "scss/block-no-redundant-nesting": true,
    "scss/comment-no-empty": true,
    "scss/double-slash-comment-empty-line-before": "never",
    "scss/double-slash-comment-inline": "never",
    "selector-class-pattern": null
  }
}
